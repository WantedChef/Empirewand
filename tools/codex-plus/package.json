{
  "name": "codex-plus",
  "displayName": "Codex Plus",
  "description": "Companion UI for Codex: profiles, model picker (incl. legacy), and easy runtime settings.",
  "version": "0.1.0",
  "publisher": "local",
  "icon": "media/codex.svg",
  "engines": {
    "vscode": "^1.82.0"
  },
  "categories": ["Other"],
  "repository": {
    "type": "git",
    "url": "https://example.com/your/repo.git"
  },
  "bugs": {
    "url": "https://example.com/your/repo/issues"
  },
  "scripts": {
    "package": "node ./scripts/package.js",
    "install:vsix": "node ./scripts/install.js"
  },
  "activationEvents": [
    "onCommand:codexPlus.openSettings",
    "onCommand:codexPlus.selectProfile",
    "onCommand:codexPlus.selectModel",
    "onCommand:codexPlus.toggleAutoApprove",
    "onCommand:codexPlus.autoDetectPaths",
    "onCommand:codexPlus.openHistoryFile",
    "onCommand:codexPlus.openLogsFolder",
    "onView:codexPlus.settings",
    "onView:codexPlus.history",
    "onView:codexPlus.logs"
  ],
  "contributes": {
    "commands": [
      { "command": "codexPlus.openSettings", "title": "Codex Plus: Open Settings" },
      { "command": "codexPlus.selectProfile", "title": "Codex Plus: Select Profile" },
      { "command": "codexPlus.selectModel", "title": "Codex Plus: Select Model" },
      { "command": "codexPlus.toggleAutoApprove", "title": "Codex Plus: Toggle Auto-Approve" },
      { "command": "codexPlus.autoDetectPaths", "title": "Codex Plus: Auto-Detect History/Logs Paths" },
      { "command": "codexPlus.openHistoryFile", "title": "Codex Plus: Open History File" },
      { "command": "codexPlus.openLogsFolder", "title": "Codex Plus: Open Logs Folder" },
      { "command": "codexPlus.refreshHistory", "title": "Codex Plus: Refresh History" },
      { "command": "codexPlus.refreshLogs", "title": "Codex Plus: Refresh Logs" }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "codexPlus",
          "title": "Codex Plus",
          "icon": "media/codex.svg"
        }
      ]
    },
    "views": {
      "codexPlus": [
        { "id": "codexPlus.settings", "name": "Settings" },
        { "id": "codexPlus.history", "name": "History" },
        { "id": "codexPlus.logs", "name": "Logs" }
      ]
    },
    "configuration": {
      "title": "Codex Plus",
      "properties": {
        "codex.profile": {
          "type": "string",
          "enum": ["Low", "Medium", "High", "Creative", "Strict Code"],
          "default": "Medium",
          "description": "Profile preset for model settings (temperature, reasoning budget, etc)."
        },
        "codex.model": {
          "type": "string",
          "default": "o4-mini",
          "description": "Selected model for Codex."
        },
        "codex.temperature": {
          "type": "number",
          "minimum": 0,
          "maximum": 2,
          "default": 0.3,
          "description": "Sampling temperature for model responses."
        },
        "codex.maxTokens": {
          "type": "number",
          "minimum": 128,
          "maximum": 32768,
          "default": 4096,
          "description": "Max tokens for responses (if applicable)."
        },
        "codex.reasoningBudget": {
          "type": "number",
          "minimum": 0,
          "maximum": 200,
          "default": 30,
          "description": "Reasoning budget (rough units) for advanced models."
        },
        "codex.legacyModels": {
          "type": "boolean",
          "default": false,
          "description": "Include legacy models in the model picker dropdown."
        },
        "codex.customModels": {
          "type": "array",
          "items": { "type": "string" },
          "default": [],
          "description": "Additional custom model identifiers to display in the picker."
        },
        "codex.autoApprove": {
          "type": "boolean",
          "default": true,
          "description": "Auto-approve shell/file/network actions."
        },
        "codex.sandboxMode": {
          "type": "string",
          "enum": ["workspace-write", "danger-full-access"],
          "default": "danger-full-access",
          "description": "Sandbox mode preference to sync into codex.config.json."
        },
        "codex.networkAccess": {
          "type": "string",
          "enum": ["enabled", "restricted"],
          "default": "enabled",
          "description": "Network access preference to sync into codex.config.json."
        },
        "codex.modelEndpoint": {
          "type": "string",
          "default": "",
          "description": "Custom API endpoint for model requests (optional)."
        },
        "codex.historyPath": {
          "type": "string",
          "default": ".codex/history.json",
          "description": "Path to Codex history file (JSON or JSONL) relative to workspace root."
        },
        "codex.logGlobs": {
          "type": "array",
          "items": { "type": "string" },
          "default": [".codex/logs/*.log", ".codex/*.log"],
          "description": "Glob patterns for Codex log files to display in the Logs view."
        }
      }
    }
  },
  "main": "./src/extension.js",
  "license": "MIT"
}
